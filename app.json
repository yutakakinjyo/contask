{
  "name": "contask",
  "scripts": {
    "postdeploy": "rake db:migrate"
  },
  "env": {
    "BASIC_AUTH_USERNAME": {
      "description": "username",
      "value": "username"
    },
    "BASIC_AUTH_PASSWORD": {
      "description": "password",
      "value": "password"
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
